{
  "workbench.colorTheme": "One Monokai",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.obj": "3dviewer.viewer",
    "*.md": "default"
  },

  "editor.fontFamily": "'Noto Sans Mono', 'monospace', monospace",
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "smooth",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.guides.bracketPairs": "active",
  "editor.bracketPairColorization.enabled": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",

  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "terminal.explorerKind": "external",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.showExitAlert": false,

  "files.eol": "\n",
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "diffEditor.ignoreTrimWhitespace": false,

  /* -------------------------------------------------------------------------- */
  // Javascript formatter (follows default)
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // C and C++ specific formatters
  "C_Cpp.autocompleteAddParentheses": true,
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  // Python specific formatters
  "python.formatting.provider": "autopep8",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.formatting.autopep8Args": ["--ignore=E402"],

  // Java specific formatters
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-18",
      "path": "/usr/lib/jvm/java-18-openjdk",
      "default": true
    }
  ],
  /* -------------------------------------------------------------------------- */

  /* -------------------------------------------------------------------------- */
  // Extension : Bookmarks
  "bookmarks.useWorkaroundForFormatters": true,

  // Extension : Live Server
  "liveServer.settings.ignoreFiles": ["**"],

  // Extension : Better Comments
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "window.zoomLevel": -1
}